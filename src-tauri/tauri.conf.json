{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "sigil",
  "version": "0.2.4",
  "identifier": "com.sigil.desktop",
  "build": {
    "frontendDist": "../dist/sigil/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Sigil",
        "width": 600,
        "height": 840,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "infoPlist": "Info.plist"
    }
  }
}
